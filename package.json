{
  "name": "tsc-wrapper",
  "version": "1.0.0",
  "description": "A utility to compile typescript files from code instead of using tsc",
  "main": "index.js",
  "engines": {
    "node": ">4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tswaters/tsc-wrapper.git"
  },
  "scripts": {
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha --dir reports/coverage",
    "lint": "eslint \"**/*.js\" -f node_modules/eslint-html-reporter/reporter.js -o reports/lint/index.html",
    "test": "mocha"
  },
  "author": "Tyler Waters",
  "license": "MIT",
  "dependencies": {
    "typescript": "^1.8.10"
  },
  "devDependencies": {
    "eslint": "^3.3.1",
    "eslint-html-reporter": "^0.5.2",
    "fs.extra": "^1.3.2",
    "mocha": "^3.0.2"
  }
}
